<?xml version="1.0" encoding="utf-8"?>
<com.maple.rubbishseparator.view.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/customdialog_1"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/dialog_record_notice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/touch_record"
    android:textSize="20sp"
    android:textColor="@color/stringcolor_black"
    android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/dialog_record_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/recording"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
</com.maple.rubbishseparator.view.PercentLinearLayout>