<?xml version="1.0" encoding="utf-8"?>
<com.maple.rubbishseparator.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:orientation="horizontal">

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/canlist_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/recycle_icon"
        app:riv_corner_radius="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/canlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/stringcolor_black"
            android:textSize="20sp"
            android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/canlist_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:textColor="@color/stringcolor_grey"
                    android:textSize="10sp"
                    android:maxLines="3"
                    tools:ignore="SmallSp,TextViewEdits" />
            </FrameLayout>

    </LinearLayout>

</com.maple.rubbishseparator.view.PercentLinearLayout>