<?xml version="1.0" encoding="utf-8"?>
<com.maple.rubbishseparator.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.SeparateGuide">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/guide_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/person"
            app:riv_oval="true"
            tools:ignore="ContentDescription" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">

            <TextView
                android:id="@+id/guide_serach"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/grey_round_edittext"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:text="@string/touch_to_search"
                android:textColor="@color/stringcolor_grey"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/search"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <ImageView
            android:id="@+id/guide_choice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:scaleType="fitXY"
            android:src="@drawable/morechoice_blue"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/guide_refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:id="@+id/guide_refreshlayout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/guide_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/toppage" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/guide_record"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/voice_recognize"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/guide_takepic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/photo_recognize"
                        tools:ignore="ContentDescription" />


                    <ImageView
                        android:id="@+id/guide_choosepic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/pic_recognize"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/guide_getQrCode"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/viewback_grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/guide_qrcode_pic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/logo"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/getuserqrcode"
                        android:textColor="@color/stringcolor_black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <com.scwang.smartrefresh.layout.footer.BallPulseFooter
                android:id="@+id/guide_refreshlayout_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAnimatingColor="@color/viewback_blue" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </FrameLayout>

</com.maple.rubbishseparator.view.PercentLinearLayout>